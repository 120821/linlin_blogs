<h3>列表</h3>

博客总数<%= @blogs.size %>
<br/>
<%= paginate @blogs %>
<table class="table table-striped">
  <% @blogs.each do |blog| %>
    <tr>
      <td >
        <a href="/blogs/<%= blog.id %>" > <%= blog.id %> <%= blog.title %> </a>
      </td>
      <td>
        <%=blog.title %>
      </td>
      <td>
        <%=blog.content %>
      </td>
      <td>
        <%= link_to "编辑", edit_blog_path(:id => blog.id), class: 'btn btn-primary' %>
        <%= link_to "删除",blog,:method => :delete, class: 'btn btn-primary' %>
      </td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to "新建", new_blog_path, class: 'btn btn-primary' %>
