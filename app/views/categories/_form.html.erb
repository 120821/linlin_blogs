<%= form_for(@category) do |f| %>

  <table class='table table-striped table-hover table-bordered'>
    <tr>
      <th style="width: 150px;">
        名称
      </th>
      <td>
        <%= f.text_field :name, class: "form-control" %>
      </td>
    </tr>

  </table>
  <%= f.submit "确定", class: 'btn btn-primary btn-sm' %>
<% end %>

